<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/total_drinks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="@dimen/label_total"
                android:text="Beers:"
                android:textIsSelectable="true"
                android:textSize="@dimen/abc_text_size_headline_material" />

            <EditText
                android:id="@+id/total_beers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="@dimen/common_editor"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textSize="@dimen/abc_text_size_headline_material" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="@dimen/label_total"
                android:text="Cocktails:"
                android:textIsSelectable="true"
                android:textSize="@dimen/abc_text_size_headline_material" />

            <EditText
                android:id="@+id/total_cocktails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="@dimen/common_editor"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textSize="@dimen/abc_text_size_headline_material" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/is_large_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is large tab"
            android:textSize="@dimen/abc_text_size_headline_material" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/total_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tip_total"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="@dimen/label_pre_dol"
            android:text="Total:"
            android:textIsSelectable="true"
            android:textSize="@dimen/abc_text_size_headline_material" />

        <TextView
            android:id="@+id/textView3"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="@dimen/label_dol"
            android:padding="16dp"
            android:text="$"
            android:textIsSelectable="true"
            android:textSize="@dimen/abc_text_size_headline_material" />

        <EditText
            android:id="@+id/total_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="@dimen/common_editor"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="@dimen/abc_text_size_headline_material" />

    </LinearLayout>
</LinearLayout>